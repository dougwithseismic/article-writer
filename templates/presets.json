  "word_length_scaling": {
    "description": "When a custom word count is provided, scale other targets proportionally relative to the preset's default total_words. The content_type preset provides the base ratios; the custom word count overrides total_words and minimum_words, and other targets scale accordingly.",
    "rules": {
      "minimum_words": "custom_words * 0.8",
      "sections": "scale proportionally, minimum 2",
      "external_links": "scale proportionally, minimum 3",
      "real_world_examples": "scale proportionally, minimum 2",
      "min_words_per_section": "custom_words / section_count",
      "sources_per_section": "scale proportionally, minimum 3"
    }
